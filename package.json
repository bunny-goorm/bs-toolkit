{
  "name": "bs-toolkit",
  "version": "1.1.1",
  "description": "A lightweight, type-safe debounce and throttle utility library for performance optimization",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "debounce",
    "throttle",
    "performance",
    "optimization",
    "utility",
    "typescript"
  ],
  "author": "bunny-goorm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bunny-goorm/bs-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/bunny-goorm/bs-toolkit/issues"
  },
  "homepage": "https://github.com/bunny-goorm/bs-toolkit#readme",
  "devDependencies": {
    "@types/node": "^22.15.17",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
